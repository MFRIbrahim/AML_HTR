  "data_loading": {
    "train_size": 0.6,
    "batch_size": 50,
    "transformations": [
      {
        "name": "GrayScale"
      },
      {
      "name": "PadTranscript",
      "parameters": {
          "max_word_length": 32
        }
      },
      {
      "name": "Rescale",
      "parameters": {
        "new_width": 128,
        "new_height": 32
        }
      },
      {
        "name": "ToTensor",
        "parameters": {
          "char_to_int": "locals://de_en_coder/char_to_idx"
        }
      }
    ],
    "save_path":"../dataset_splits/split.sav"
  },
  "training": {
    "name": "Net_small_500_epochs-total",
